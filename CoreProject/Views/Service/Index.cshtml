@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetlerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>BAŞLIK</th>
                            <th>SİL</th>
                            <th>DÜZENLE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td class="budget">@item.Title</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">SİL</a></td>
                                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">DÜZENLE</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <a href="/Service/AddService" class="btn btn-outline-primary">YENİ HİZMET EKLE</a>
        </div>
    </div>
</div>


