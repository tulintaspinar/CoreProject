@model Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">YENİ DENEYİM EKLEME PANELİ</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>DENEYİM ADI</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label >DENEYİM TARİHİ</label>
                    <input type="text" class="form-control" asp-for="Date">
                </div>
                <div class="form-group">
                    <label >DENEYİM AÇIKLAMASI</label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">KAYDET</button>
            </form>
        </div>
    </div>
</div>


