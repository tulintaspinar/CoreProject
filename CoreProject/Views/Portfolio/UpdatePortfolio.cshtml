@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">YENİ DENEYİM EKLEME PANELİ</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>PROJE ADI</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    @Html.ValidationMessageFor(x=>x.Name,"",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Proje Resmi</label>
                    <input type="file" asp-for="ImageUrl" class="form-control" />
                    @Html.ValidationMessageFor(x=>x.ImageUrl,"",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Proje Resmi 2</label>
                    <input type="file" asp-for="ImageUrl2" class="form-control" />
                    @Html.ValidationMessageFor(x=>x.ImageUrl2,"",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>URL</label>
                    <input type="text" asp-for="ProjectUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim 1</label>
                    <input type="file" asp-for="Image1" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim 2</label>
                    <input type="file" asp-for="Image2" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim 3</label>
                    <input type="file" asp-for="Image3" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim 4</label>
                    <input type="file" asp-for="Image4" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Platform</label>
                    <input type="text" asp-for="Platform" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Ücret</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    @Html.ValidationMessageFor(x=>x.Price,"",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Durum</label>
                    <input type="text" asp-for="Status" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tamamlanma Oranı</label>
                    <input type="text" asp-for="Value" class="form-control" />
                    @Html.ValidationMessageFor(x=>x.Value,"",new{@class="text-danger"})
                </div>
                <button type="submit" class="btn btn-outline-primary mr-2">KAYDET</button>
            </form>
        </div>
    </div>
</div>

